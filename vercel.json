{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json", // যদি Root Directory সেট না করা থাকে
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist" // বিল্ড আউটপুট ডিরেক্টরি যদি client ফোল্ডারের ভেতরে হয়
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "client/dist/index.html" // রুটিংটিও আউটপুট ডিরেক্টরির ভেতরে index.html-কে নির্দেশ করবে
    }
  ]
}
